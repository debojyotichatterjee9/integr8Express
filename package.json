{
  "name": "express-typescript-app",
  "version": "1.0.0",
  "description": "Express application with TypeScript, Handlebars, Cluster and Worker Threads",
  "private": true,
  "author": "Debojyoti Chatterjee",
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/cluster.js",
    "start:single": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/cluster.ts",
    "dev:single": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prod": "npm run build && npm start",
    "prod:single": "npm run build && npm run start:single",
    "test:cluster": "CLUSTERING=true npm run dev"
  },
  "keywords": [
    "express",
    "typescript",
    "handlebars",
    "worker-threads"
  ],
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "config": "^4.1.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^17.2.3",
    "express": "~4.16.1",
    "express-handlebars": "^8.0.3",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "loggernaut": "^1.1.1",
    "mongoose": "^8.19.1",
    "morgan": "~1.9.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}