{
  "services": {
    "rest": {
      "host": "localhost",
      "port": 3000
    }
  },
  "cluster": {
    "enabled": true,
    "maxRestarts": 5,
    "restartWindow": 60000,
    "shutdownTimeout": 30000,
    "workerReadyTimeout": 10000
  },
  "workerThreads": {
    "poolSize": 4,
    "taskTimeout": 30000
  },
  "database": {
    "mongodb": {
      "uri": "mongodb://localhost:27017/integr8Express",
      "options": {
        "retryWrites": true,
        "maxPoolSize": 10,
        "minPoolSize": 2,
        "serverSelectionTimeoutMS": 5000,
        "socketTimeoutMS": 45000
      }
    }
  },
  "logging": {
    "level": "info",
    "fileLogging": true
  }
}