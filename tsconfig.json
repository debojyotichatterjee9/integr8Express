{
  "compilerOptions": {
    // Target the latest stable ECMAScript version for modern features
    "target": "ES2022",
    "module": "commonjs",
    // "moduleResolution": "nodenext", // commenting out since it is soon to be deprecated and is creating import issues in some files.
    "lib": ["ES2022"],

    // Enable all strict type-checking options for better code quality
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Output directory for compiled JavaScript files
    "outDir": "./dist",
    "rootDir": "./src",

    // Additional helpful options
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Source maps help with debugging TypeScript in development
    "sourceMap": true,

    // Enable decorator support for potential future use
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/types/**/*"], // Add this line if your custom declaration file is in a 'typings' directory
  "exclude": ["node_modules", "dist"]
}
